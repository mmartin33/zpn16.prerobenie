<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="bodovySystem">
        <!--<class>sk.zpn.domena.Uzivatel</class>-->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/zpn" />
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />


            <!-- custom SessionLog implementation to use apache commons logging 1.1 API (so log4J) -->
            <!--<property name="eclipselink.logging.logger" value="org.eclipse.persistence.logging.CommonsLoggingSessionLog"/>-->
            <property name="eclipselink.logging.level" value="FINE" />
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>

    <!--<property name="eclipselink.weaving" value="static" />-->
    <!--<property name="eclipselink.logging.level.sql" value="FINEST" />-->
    <!--<property name="eclipselink.logging.level.cache" value="FINEST" />-->



    </persistence-unit>
</persistence>